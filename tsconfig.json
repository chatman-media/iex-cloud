{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2015"],
    "types": ["node"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "lib",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators":true,
    "emitDecoratorMetadata": true
  }
}
